      </recipeUsers>
		<researchPrerequisite>TFBKigurumiClothing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <statBases>
      <MarketValue>280</MarketValue>
    </statBases>
	<thingCategories>
		<li>Apparel</li>
	</thingCategories>
  </ThingDef>

