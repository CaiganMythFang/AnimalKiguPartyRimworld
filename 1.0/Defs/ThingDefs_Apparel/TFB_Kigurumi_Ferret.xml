<?xml version="1.0" encoding="utf-8" ?>
<Defs>  

    	<!-- Red Panda - Stuffless -->

  <ThingDef ParentName="TFBKigurumiHatMakeableStuffless">
    <defName>Apparel_TFBFerretKiguHood</defName>
    <label>Ferret Kigu Hood</label>
    <description>A Ferret Kigu Hood. 
    
    This little thief is sure to steal more than just your heart. Like your keys, socks, wallet, sushi, watermelons, christmas ornaments, dragons, coins, soda, shoes, books, computer mice, the pythagoras theorem, string, blankets, pillows, gold hdmi cables, the moon, my insanity, and many many other things.
    
    [Animal Kigurumi Party]</description>
    <graphicData>
      <texPath>Apparel/Hoods/FerretKiguHood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <recipeUsers>
			<li>HandKiguWorktable</li>
			<li>ElectricKiguWorktable</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
		<Cloth>25</Cloth>
	</costList>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <Mass>0.1</Mass>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
      <ArmorRating_Heat>0.02</ArmorRating_Heat>
      <Insulation_Cold>14</Insulation_Cold>
      <Insulation_Heat>1.5</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.05</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Hoods/FerretKiguHood</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Tribal</li>
		<li>Outlander</li>
		<li>Neolithic</li>
		<li>IndustrialBasic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
		<li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <generateAllowChance>.075</generateAllowChance>
  </ThingDef>  

